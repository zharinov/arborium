repo "https://github.com/tree-sitter/tree-sitter-html"
commit "73a3947324f6efddf9e17c0ea58d454843590cc0"
license "MIT"

grammar {
    id "html"
    name "HTML"
    tag "markup"
    tier 2
    has-scanner #true
    generate-component #true
    icon "devicon-plain:html5"
    aliases "htm"

    inventor "Tim Berners-Lee"
    year 1993
    description "Standard markup language for web documents; current [living standard](https://html.spec.whatwg.org/) is maintained by WHATWG."
    link "https://en.wikipedia.org/wiki/HTML"
    trivia "Berners-Lee introduced HTML in 1991; the first public description appeared in 1993, and the modern living standard is maintained by [WHATWG](https://whatwg.org/) as the authoritative spec."

    sample {
        path "samples/component.html"
        description "Interactive component with inline CSS, JavaScript, templates, and event handlers."
        license "CC0-1.0"
    }
}
