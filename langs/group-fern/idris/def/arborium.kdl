repo "https://github.com/kayhide/tree-sitter-idris"
commit "c56a25cf57c68ff929356db25505c1cc4c7820f6"
license "MIT"

grammar {
    id "idris"
    name "Idris"
    tag "code"
    tier 4
    has-scanner #true
    tests-cursed #true // Unicode in highlights.scm breaks on Windows
    icon "mdi:alpha-i-box-outline"
    aliases "idr"

    inventor "Edwin Brady"
    year 2009
    description "Dependently typed functional language for verified software; see the [official site](https://www.idris-lang.org/)."
    link "https://en.wikipedia.org/wiki/Idris_(programming_language)"
    trivia "Brady introduced Idris in 2009 to bring dependent types to general-purpose programming; the [documentation](https://www.idris-lang.org/documentation/) demonstrates length-indexed vectors and other proofs in code."

    sample {
        path "samples/List.idr"
        description "Idris2 Data.List module with dependent types, proofs, and list operations."
        link "https://github.com/idris-lang/Idris2/blob/main/libs/base/Data/List.idr"
        license "BSD-3-Clause"
    }
}
