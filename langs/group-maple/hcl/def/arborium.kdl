repo "https://github.com/tree-sitter-grammars/tree-sitter-hcl"
commit "fad991865fee927dd1de5e172fb3f08ac674d914"
license "Apache-2.0"

grammar {
    id "hcl"
    name "HCL"
    tag "config"
    tier 3
    has-scanner #true
    icon "devicon-plain:terraform"
    aliases "terraform" "tf"

    inventor "HashiCorp"
    year 2014
    description "HashiCorp Configuration Language for IaC; [language spec](https://developer.hashicorp.com/terraform/language/syntax/configuration) lives in the Terraform docs."
    link "https://github.com/hashicorp/hcl"
    trivia "Designed to be both human-readable and machine-friendly; Terraform accepts both JSON and native HCL, documented in the [Terraform language guide](https://developer.hashicorp.com/terraform/language)."

    sample {
        path "samples/vpc-main.tf"
        description "Terraform VPC example using providers, modules, variables, and resource blocks."
        link "https://github.com/terraform-aws-modules/terraform-aws-vpc/blob/master/examples/simple/main.tf"
        license "Apache-2.0"
    }
}
