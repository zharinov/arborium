repo "https://github.com/nix-community/tree-sitter-nix"
commit "bfcb03e6ddccc5a1eb84cea0176096f85a7af333"
license "MIT"

grammar {
    id "nix"
    name "Nix"
    tag "config"
    tier 2
    has-scanner #true
    icon "devicon-plain:nixos"

    inventor "Eelco Dolstra"
    year 2003
    description "Purely functional package manager and language for reproducible builds; see [Dolstra's PhD thesis](https://edolstra.github.io/pubs/phd-thesis.pdf)."
    link "https://en.wikipedia.org/wiki/Nix_(package_manager)"
    trivia "Nix stores packages in hash-addressed store paths (e.g., /nix/store/...), eliminating dependency hell. The design is formalized in Dolstra's 2006 thesis and underpins NixOS."

    sample {
        path "samples/buildDepsOnly.nix"
        description "crane helper derivation that builds dependencies only, showing functions, let bindings, overrides, and mkDerivation usage."
        link "https://github.com/ipetkov/crane/blob/master/lib/buildDepsOnly.nix"
        license "Apache-2.0"
    }
}
