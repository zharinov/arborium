repo "https://github.com/tree-sitter-grammars/tree-sitter-glsl"
commit "24a6c8ef698e4480fecf8340d771fbcb5de8fbb4"
license "MIT"

grammar {
    id "glsl"
    name "GLSL"
    tag "code"
    tier 3
    icon "devicon-plain:opengl"
    aliases "vert" "frag"

    dependency "tree-sitter-c" crate="arborium-c"

    inventor "OpenGL ARB"
    year 2004
    description "OpenGL Shading Language for programmable GPUs; defined in the [GLSL 4.60 specification](https://registry.khronos.org/OpenGL/specs/gl/GLSLangSpec.4.60.pdf)."
    link "https://en.wikipedia.org/wiki/OpenGL_Shading_Language"
    trivia "Introduced with OpenGL 2.0 to replace the fixed pipeline; the Khronos/ARB spec (e.g., version 4.60) is the authoritative reference."

    sample {
        path "samples/phong.frag"
        description "Fragment shader from Vulkan samples using samplers, structs, and lighting calculations."
        link "https://github.com/SaschaWillems/Vulkan/blob/master/shaders/glsl/offscreen/phong.frag"
        license "MIT"
    }
}
