repo "https://github.com/tree-sitter-grammars/tree-sitter-vim"
commit "e8e3d62b2dda6e3a56bc7580628e6e1071a7887a"
license "MIT"

grammar {
    id "vim"
    name "Vimscript"
    tag "config"
    tier 3
    generate-component #false
    has-scanner #true
    icon "devicon-plain:vim"
    aliases "vimscript" "viml"

    inventor "Bram Moolenaar"
    year 1991
    description "Scripting language for the Vim editor; see the official Vim documentation at http://vimdoc.sourceforge.net/."
    link "https://en.wikipedia.org/wiki/Vim_(text_editor)"
    trivia "Vimscript evolved alongside Vim since 1991; Vim 7 (2006) added major scripting features. Bram maintained Vim until his passing in 2023."

    sample {
        path "samples/plugin.vim"
        description "Vim plugin with functions, autocommands, mappings, and conditionals."
        license "MIT"
    }
}
