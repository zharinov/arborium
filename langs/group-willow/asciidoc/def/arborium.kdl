repo "https://github.com/cathaysia/tree-sitter-asciidoc"
commit "0ecc13042b7352ddc3f7b8b31432e262711d44e4"
license "Apache-2.0"

grammar {
    id "asciidoc"
    name "Asciidoc"
    tag "markup"
    tier 5
    has-scanner #true
    icon "mdi:text-box"
    aliases "adoc"

    inventor "Stuart Rackham"
    year 2002
    description "A lightweight markup language for writing technical documentation and books."
    link "https://en.wikipedia.org/wiki/AsciiDoc"
    trivia "O'Reilly Media uses AsciiDoc as the source format for many of their technical books."

    sample {
        path "samples/readme.adoc"
        description "AsciiDoc readme showing headers, code blocks, tables, and admonitions."
        link "https://github.com/asciidoctor/asciidoctor/blob/main/README.adoc"
        license "MIT"
    }
}
