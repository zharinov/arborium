repo "https://github.com/tree-sitter-grammars/tree-sitter-vue"
commit "22bdfa6c9fc0f5ffa44c6e938ec46869ac8a99ff"
license "MIT"

grammar {
    id "vue"
    name "Vue"
    tag "markup"
    tier 3
    has-scanner #true
    icon "devicon-plain:vuejs"

    dependency "tree-sitter-html" crate="arborium-html"

    queries {
        highlights {
            prepend crate="arborium-html"
        }
    }

    inventor "Evan You"
    year 2014
    description "Progressive JavaScript framework for UIs; official docs at <a href=\"https://vuejs.org/guide/introduction.html\">vuejs.org</a>."
    link "https://en.wikipedia.org/wiki/Vue.js"
    trivia "You released Vue in Feb 2014 after working on Angular at Google; <a href=\"https://github.com/vuejs/core/releases\">release history</a> and guide document its evolution from 0.10 to Vue 3/4 composition API."

    sample {
        path "samples/App.vue"
        description "Element Plus Button component with Vue 3 Composition API, TypeScript, and dynamic styling."
        link "https://github.com/element-plus/element-plus/blob/dev/packages/components/button/src/button.vue"
        license "MIT"
    }
}
